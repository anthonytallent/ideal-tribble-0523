<h1><%= @movie.title %></h1>
<p><%= @movie.creation_year %></p>
<p><%= @movie.genre %></p>

<p><% @movie.actors_youngest_to_oldest.each do |actor| %></p>
      <p><%= actor.name %></p>
      <p><%= actor.age %></p>
    <% end %>
<p>average age of actors: <%= @movie.actors_average_age %></p>
<p>Add an actor by their id number down below</p>
<%= form_with url: "/movies/#{@movie.id}", method: :post, local: true do |f| %>
  <%= f.text_field :actor_id %>
  <%= f.submit "Add Actor" %>
<% end %>